<div class="col-md-8 col-md-offset-3
">
  <h2 class="col-md-8 col-md-offset-3">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <div class="field col-md-12">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, "class": "col-md-8" %>
      </div>

      <div class="field col-md-12">
        <%= f.label :email %><br />
        <%= f.email_field :email, "class": "col-md-8" %>
      </div>

      <div class="field col-md-12">
        <%= f.label :password %>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", "class": "col-md-8" %>
      </div>

      <div class="field col-md-12">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", "class": "col-md-8" %>
      </div>

      <div class="actions col-md-6 col-md-offset-3">
        <%= f.submit "Sign up" %>
      </div>
  <% end %>

  <div class="col-md-12"><%= render "devise/shared/links" %></div>
</div>